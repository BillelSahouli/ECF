{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div style="margin-top: 50px">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">Compte Courant</h1>
                {{ form_row(form.currentAccount) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">Livret A</h1>
                {{ form_row(form.bookletA) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">Virement</h1>
                {{ form_row(form.transfer) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-3">
                <button style="width: 200px;" type="submit" class="btn btn-primary">Valider</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
